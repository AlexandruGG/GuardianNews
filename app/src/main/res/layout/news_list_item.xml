<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:paddingEnd="@dimen/padding_16dp"
    android:paddingLeft="@dimen/padding_16dp"
    android:paddingRight="@dimen/padding_16dp"
    android:paddingStart="@dimen/padding_16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/textColorNewsTitle"
            android:textSize="@dimen/text_size_16sp"
            tools:text="Long placeholder news title text that takes up max 2 lines of text" />

        <TextView
            android:id="@+id/text_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            app:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/textColorNewsSection"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="bold"
            tools:text="Science" />

        <TextView
            android:id="@+id/text_contributor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/textColorDateAuthor"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="italic"
            tools:text="John Doe" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/padding_16dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/padding_16dp">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/textColorDateAuthor"
            android:textSize="@dimen/text_size_12sp"
            tools:text="Mar 6, 2010" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/textColorDateAuthor"
            android:textSize="@dimen/text_size_12sp"
            tools:text="3:00 PM" />

    </LinearLayout>
</LinearLayout>